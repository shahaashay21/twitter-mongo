<!DOCTYPE html>
<html>
  <head>
    <title><%= us.fname.toUpperCase() %> <%= us.lname.toUpperCase() %></title>
    <% include head.ejs %>
  </head>
  <body  ng-app="twitter" ng-controller="twitter" ng-init="tweetss=init('<%= fname %>')">
  	<% include header-home.ejs %>
  	
  	<div class="container-fluid" style="height: 175px; background-color:#0084b4">
  		<div class="container">
  			<div class="col-xs-12">
		  		<div style="position:absolute; z-index:1; margin-top:50px">
		  			<img src="/img/<%= us.dp %>" class="img-rounded menu-img profImage" style="height: 200px; width:200px">
		  		</div>
		  	</div>
  		</div>
  	</div>
  	<div class="container-fluid" style="height: 60px; background-color:#fff; border-bottom:1px solid #e1e8ed">
  		<div class="container">
  			<div class="col-xs-offset-3 col-xs-6" style="color:#66757f">
  				<div class="" style="">
  					<div style="margin-top:10px; height:50px; border-bottom: 4px solid #0084b4; float:left; padding:0 10px">
  						<center>
	  						<div style="font-size:12px">TWEETS</div>
	  						<div style="font-size:18px"><%= us.tweet %></div>
	  					</center>
  					</div>
  					<div style="margin-top:10px; height:50px; border-bottom: 4px solid #0084b4; float:left; padding:0 10px">
  						<center>
	  						<div style="font-size:12px">FOLLOWING</div>
	  						<div style="font-size:18px"><%= us.following %></div>
	  					</center>
  					</div>
  					<div style="margin-top:10px; height:50px; border-bottom: 4px solid #0084b4; float:left; padding:0 10px">
  						<center>
	  						<div style="font-size:12px">FOLLOWERS</div>
	  						<div style="font-size:18px"><%= us.followers %></div>
	  					</center>
  					</div>
  				</div>
  			</div>
  			<div class="col-xs-3" style="padding-top:12px">
  				<span ng-if="proffollowchk == 1">
					<div follow-btn class="btn pull-right profile-btn btn-following" style="color: #fff" ng-click="follow(profuser_id,1)">Following</div>
				</span>
				<span ng-if="profuserid != profuser_id && proffollowchk == 0">
					<div class="btn btn-default pull-right profile-btn btn-follow" ng-click="follow(profuser_id,0)"><i class="fa fa-user-plus" style="color:rgba(27, 149, 224, 0.8)"></i> Follow</div>
				</span>
  				<span ng-if="profuserid == profuser_id">
					<div class="btn btn-default pull-right profile-btn btn-edit" ng-click="userDetails()" data-toggle="modal" data-target="#userinfo">Edit profile</div>
				<span>
			</div>
  		</div>
  	</div>
  	
  	<!--Model for user information-->
  	<div class="modal fade" id="userinfo" role="dialog">
	    <div class="modal-dialog">
	    
	      <!-- Modal content-->
	      <div class="modal-content">
	        <div class="modal-header">
	          <button type="button" class="close" data-dismiss="modal">&times;</button>
	          <h4 class="modal-title">User Information</h4>
	        </div>
	        <div class="modal-body" style="height:470px">
	        	<div class="cotainer">  
					<div class="col-xs-12">
						
							<div class="col-xs-3" style="padding-top:15px">First Name</div>
							<div class="col-xs-9">
			    				<input type="text" id="us-fname" name="us-fname" ng-model="userinfo.fname" class="input_text_box" placeholder="First Name...">
				    		</div>
				    		<div class="col-xs-3" style="padding-top:15px">Last Name</div>
				    		<div class="col-xs-9">
				    			<input type="text" id="us-lname" name="us-lname" ng-model="userinfo.lname" class="input_text_box" placeholder="Last Name...">
				    		</div>
				    		<div class="col-xs-3" style="padding-top:15px">Email</div>
				    		<div class="col-xs-9">
				    			<input type="email" id="us-email" name="us-email" readonly ng-model="userinfo.email" class="input_text_box" placeholder="Email...">
				    		</div>
				    		<div class="col-xs-3" style="padding-top:15px">Handle</div>
				    		<div class="col-xs-9">
				    			<input type="text" id="us-handle" name="us-handle" class="input_text_box" ng-model="userinfo.tweet_handle" placeholder="Twitter handler...">
				    		</div>
				    		<div class="col-xs-3" style="padding-top:15px">DOB</div>
				    		<div class="col-xs-9">
				    			<input type="text" id="us-dob" name="us-dob" class="input_text_box" ng-model="userinfo.bday" Placeholder="mm/dd/yyyy">
				    		</div>
				    		<div class="col-xs-3" style="padding-top:15px">Contact</div>
				    		<div class="col-xs-9">
				    			<input type="text" id="us-contact" name="us-contact" class="input_text_box" ng-model="userinfo.contact" placeholder="Contact...">
				    		</div>
				    		<div class="col-xs-3" style="padding-top:15px">Location</div>
				    		<div class="col-xs-9">
				    			<input type="text" id="us-location" name="us-location" class="input_text_box" ng-model="userinfo.location" placeholder="Location...">
				    		</div>
				    		<div class="col-xs-12" style="padding-top:30px">
				    			<center><div class="tweet" style="width:100px" ng-click="addinfo()">Submit</div></center>
				    		</div>
				    		
					</div>
				</div>
						
						
	        </div>
	        
	      </div>
	      
	    </div>
	</div>
  	
  	<div class="container" style="margin-top: 10px">
  		<div class="row">
  			<div class="col-lg-3 left-panel">
  				<% include left-user-home.ejs %>
  			</div>
  			<div class="col-lg-6">
  				<% include center-home.ejs %>
  			</div>
  			<div class="col-lg-9">
  				<% include right-home.ejs %>
  			</div>
  		</div>
  	</div>
  	
  	<script>useridpage="<%=useridpage%>"; user_id=<%= id  %>; followchk=<%= followchk  %></script>
    <% include foot.ejs %>
  </body>
</html>